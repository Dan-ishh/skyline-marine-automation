/**
 * Helper Functions
 */

/** Get all categories */
export const getAllCategories = (): Category[] => {
  return categories;
};

/** Get categories by brand ID */
export const getCategoriesByBrand = (brandId: string): Category[] => {
  return categories.filter((cat) => cat.brandId === brandId);
};

/** Get category by slug and brand ID */
export const getCategoryBySlug = (
  brandId: string,
  slug: string
): Category | undefined => {
  return categories.find(
    (cat) => cat.brandId === brandId && cat.slug === slug
  );
};

/** Get category by ID */
export const getCategoryById = (id: string): Category | undefined => {
  return categories.find((cat) => cat.id === id);
};

/** Get all sub-categories */
export const getAllSubCategories = (): SubCategory[] => {
  return subCategories;
};

/** Get sub-categories by category ID */
export const getSubCategoriesByCategory = (
  categoryId: string
): SubCategory[] => {
  return subCategories.filter((sub) => sub.categoryId === categoryId);
};

/** Get sub-category by slug and category ID */
export const getSubCategoryBySlug = (
  categoryId: string,
  slug: string
): SubCategory | undefined => {
  return subCategories.find(
    (sub) => sub.categoryId === categoryId && sub.slug === slug
  );
};

/** Get sub-category by ID */
export const getSubCategoryById = (id: string): SubCategory | undefined => {
  return subCategories.find((sub) => sub.id === id);
};

/** Get sub-categories by brand ID */
export const getSubCategoriesByBrand = (brandId: string): SubCategory[] => {
  return subCategories.filter((sub) => sub.brandId === brandId);
};

export default categories;
